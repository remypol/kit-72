    <PhaseTabs
      client:idle
      scenarioKey={scenarioKey}
      locale="de"
    />

    <!-- Phase: Vor -->
    <section id="vor" class="phase-section">
      <div class="phase-header">
        <span class="phase-number">1</span>
        <div class="phase-title-group">
          <h2 class="phase-title">Vor dem Wasserausfall</h2>
          <p class="phase-subtitle">Vorbereitung und Lagerung</p>
        </div>
      </div>

      <div class="phase-steps">
        {phases.vor.map((step, index) => (
          <CollapsibleSection
            title={step.title}
            summary={step.detail}
            step={index + 1}
            variant="card"
          >
            <p>{step.detail}</p>
            {step.tip && (
              <div class="step-tip">
                <Icon name="Lightbulb" size={16} />
                <span>{step.tip}</span>
              </div>
            )}
          </CollapsibleSection>
        ))}
      </div>
    </section>

    <!-- Phase: Während -->
    <section id="waehrend" class="phase-section">
      <div class="phase-header">
        <span class="phase-number phase-number--warning">2</span>
        <div class="phase-title-group">
          <h2 class="phase-title">Während des Wasserausfalls</h2>
          <p class="phase-subtitle">Verwaltung und Rationierung</p>
        </div>
      </div>

      <!-- Priority Warning -->
      <div class="priority-box">
        <div class="priority-icon">
          <Icon name="AlertCircle" size={24} />
        </div>
        <div class="priority-content">
          <strong>Prioritätsreihenfolge</strong>
          <div class="priority-list">
            <span class="priority-item priority-1">1. Trinken</span>
            <span class="priority-item priority-2">2. Kochen</span>
            <span class="priority-item priority-3">3. Hygiene</span>
            <span class="priority-item priority-4">4. WC</span>
          </div>
        </div>
      </div>

      <div class="phase-steps">
        {phases.waehrend.map((step, index) => (
          <CollapsibleSection
            title={step.title}
            summary={step.detail}
            step={index + 1}
            variant="card"
          >
            <p>{step.detail}</p>
            {step.tip && (
              <div class="step-tip">
                <Icon name="Lightbulb" size={16} />
                <span>{step.tip}</span>
              </div>
            )}
          </CollapsibleSection>
        ))}
      </div>
    </section>

    <!-- Phase: Nach -->
    <section id="nach" class="phase-section">
      <div class="phase-header">
        <span class="phase-number phase-number--success">3</span>
        <div class="phase-title-group">
          <h2 class="phase-title">Nach dem Wasserausfall</h2>
          <p class="phase-subtitle">Wiederherstellung und Auffüllen</p>
        </div>
      </div>

      <div class="phase-steps">
        {phases.nach.map((step, index) => (
          <CollapsibleSection
            title={step.title}
            summary={step.detail}
            step={index + 1}
            variant="card"
          >
            <p>{step.detail}</p>
            {step.tip && (
              <div class="step-tip">
                <Icon name="Lightbulb" size={16} />
                <span>{step.tip}</span>
              </div>
            )}
          </CollapsibleSection>
        ))}
      </div>
    </section>

    <!-- Interactive Checklist -->
    <section class="scenario-section">
      <h2 class="section-title">
        <Icon name="CheckSquare" size={24} />
        Deine Wasserausfall-Checkliste
      </h2>
      <p class="section-intro">
        Hake ab was du schon hast. Dein Fortschritt wird automatisch gespeichert.
      </p>
      <InteractiveChecklist
        client:idle
        storageKey={`${scenarioKey}_de`}
        categories={checklistCategories}
        title="Artikel für Wasserausfall"
        locale="de"
      />
    </section>

    <!-- FAQs -->
    <section class="scenario-section">
      <h2 class="section-title">Häufig gestellte Fragen</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details class="faq-item">
            <summary class="faq-question">
              <span>{faq.question}</span>
              <Icon name="ChevronDown" size={20} />
            </summary>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </section>

    <!-- Sources -->
    <section class="scenario-section">
      <details class="sources-block">
        <summary class="sources-header">
          <Icon name="BookOpen" size={18} />
          <span>Quellen und Referenzen</span>
          <Icon name="ChevronDown" size={16} />
        </summary>
        <div class="sources-content">
          <ul>
            <li><a href="https://www.bbk.bund.de/DE/Warnung-Vorsorge/Vorsorge/Vorrat/vorrat_node.html" target="_blank" rel="noopener">BBK - Bevorraten</a></li>
            <li><a href="https://www.umweltbundesamt.de/themen/wasser/trinkwasser" target="_blank" rel="noopener">Umweltbundesamt - Trinkwasser</a></li>
            <li><a href="https://www.who.int/water_sanitation_health/dwq/en/" target="_blank" rel="noopener">WHO - Wasserqualität</a></li>
          </ul>
        </div>
      </details>
    </section>

    <!-- Recommended Products -->
    <section class="scenario-section">
      <h2 class="section-title">
        <Icon name="ShoppingBag" size={20} />
        Empfohlene Produkte
      </h2>
      <p class="section-intro">Unsere Ratgeber zu den wichtigsten Produkten für dieses Szenario:</p>
      <div class="related-grid">
        <a href="/de/produkte/wasserspeicher/" class="related-card related-card--green">
          <Icon name="Droplet" size={24} />
          <span>Wasserspeicher</span>
        </a>
        <a href="/de/produkte/notnahrung/" class="related-card related-card--green">
          <Icon name="UtensilsCrossed" size={24} />
          <span>Notnahrung</span>
        </a>
      </div>
    </section>

    <!-- Related Scenarios -->
    <section class="scenario-section">
      <h2 class="section-title">Verwandte Szenarien</h2>
      <div class="related-grid">
        <a href="/de/szenarien/stromausfall/" class="related-card related-card--amber">
          <Icon name="Zap" size={24} />
          <span>Stromausfall</span>
        </a>
        <a href="/de/szenarien/hitzewelle/" class="related-card related-card--orange">
          <Icon name="Sun" size={24} />
          <span>Hitzewelle</span>
        </a>
      </div>
    </section>
  </main>

  <!-- Sticky Action Bar -->
  <StickyActionBar
    client:idle
    actionText="Wasser berechnen"
    actionUrl="/de/tools/wasser-rechner/"
    dismissKey={`scenario_${scenarioKey}_de`}
    label="Nächster Schritt:"
    locale="de"
  />
</BaseLayout>

