      { '@type': 'HowToSupply', name: 'Flaschenwasser (2L/Person/Tag × 3 Tage)' },
      { '@type': 'HowToSupply', name: 'Lebensmittelechter Kanister 10-20L' },
      { '@type': 'HowToSupply', name: 'Wasserentkeimungstabletten' },
      { '@type': 'HowToSupply', name: 'Feuchttücher (3-4 Packungen)' },
      { '@type': 'HowToSupply', name: 'Desinfektions-Handgel' },
