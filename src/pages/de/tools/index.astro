---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Breadcrumb from '../../../components/layout/Breadcrumb.astro';
import Icon from '../../../components/ui/Icon.astro';

const tools = [
  {
    title: 'Notfallpaket Zusammenstellen',
    description: 'Interaktive Tool zum Erstellen einer personalisierten Checkliste für deine Familie.',
    href: '/de/tools/notfallpaket-zusammenstellen/',
    icon: 'ClipboardCheck',
    badge: 'Beliebt'
  },
  {
    title: 'Wasser-Rechner',
    description: 'Berechne, wie viel Wasser du basierend auf Haushaltsgröße und Situation benötigst.',
    href: '/de/tools/wasser-rechner/',
    icon: 'Droplet',
  },
  {
    title: 'Energie-Rechner',
    description: 'Berechne deinen Energiebedarf und welche Powerbank-Kapazität du brauchst.',
    href: '/de/tools/energie-rechner/',
    icon: 'Battery',
  },
];
---

<BaseLayout
  title="Notfallpaket Tools: Rechner & Konfigurator"
  description="Interaktive Tools für dein Notfallpaket: Konfigurator, Wasser-Rechner und Energie-Rechner."
  locale="de"
>
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="mb-12">
        <Breadcrumb items={[{ label: 'Tools' }]} class="mb-4" locale="de" />
        <h1 class="text-4xl font-bold mb-4">Praktische Tools</h1>
        <p class="text-xl text-[--color-text-secondary]">
          Interaktive Hilfsmittel, um dein Notfallpaket perfekt auf deine Situation abzustimmen.
        </p>
      </div>

      <div class="space-y-6">
        {tools.map((tool) => (
          <a href={tool.href} class="card p-6 flex items-start gap-4 hover:border-[--color-accent-primary] transition-colors group block">
            <div class="w-14 h-14 flex-shrink-0 flex items-center justify-center bg-[--color-bg-tertiary] rounded-xl text-[--color-accent-primary] group-hover:bg-[--color-accent-primary] group-hover:text-[--color-bg-primary] transition-colors">
              <Icon name={tool.icon} size={28} />
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-1">
                <h2 class="text-xl font-semibold text-[--color-text-primary]">{tool.title}</h2>
                {tool.badge && (
                  <span class="px-2 py-0.5 text-xs font-medium bg-[--color-accent-primary] text-[--color-bg-primary] rounded">
                    {tool.badge}
                  </span>
                )}
              </div>
              <p class="text-[--color-text-secondary]">{tool.description}</p>
            </div>
            <svg class="w-5 h-5 text-[--color-text-muted] group-hover:text-[--color-accent-primary] transition-colors flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        ))}
      </div>

      <!-- Info Card -->
      <div class="mt-12 card p-6 bg-[--color-bg-tertiary]">
        <h3 class="font-semibold mb-2 flex items-center gap-2">
          <Icon name="Info" size={18} class="text-[--color-accent-primary]" />
          Daten werden lokal gespeichert
        </h3>
        <p class="text-sm text-[--color-text-secondary]">
          Alle deine Eingaben werden nur auf deinem Gerät gespeichert — wir sammeln keine persönlichen Daten.
          Dein Fortschritt bleibt erhalten, wenn du zurückkehrst.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
