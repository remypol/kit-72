            <li><a href="https://www.rodekruis.nl/ehbo/hitteberoerte/" target="_blank" rel="noopener">Rode Kruis - Hitteberoerte</a></li>
          </ul>
        </div>
      </details>
    </section>

    <!-- Related Scenarios -->
    <section class="scenario-section">
      <h2 class="section-title">Gerelateerde scenario's</h2>
      <div class="related-grid">
        <a href="/nl/scenario/stroomstoring/" class="related-card related-card--amber">
          <Icon name="Zap" size={24} />
          <span>Stroomstoring</span>
        </a>
        <a href="/nl/scenario/wateruitval/" class="related-card related-card--blue">
          <Icon name="Droplet" size={24} />
