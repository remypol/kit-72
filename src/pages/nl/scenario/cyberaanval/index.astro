    ],
    totalTime: 'P3D',
    supply: [
      { '@type': 'HowToSupply', name: 'Contant geld (€70/volw, €30/kind)' },
      { '@type': 'HowToSupply', name: 'USB-stick met backup' },
      { '@type': 'HowToSupply', name: 'Geprinte contactenlijst' },
      { '@type': 'HowToSupply', name: 'Radio op batterijen' },
      { '@type': 'HowToSupply', name: 'Powerbank' },
      { '@type': 'HowToSupply', name: 'OV-chipkaart met saldo' },
    ],
  }}
  faqData={faqs}
>
  <main class="scenario-page">
    <!-- Header -->
    <header class="scenario-header">
      <nav class="scenario-breadcrumb">
        <a href="/nl/scenario/" class="breadcrumb-back">
          <Icon name="ChevronLeft" size={20} />
        </a>
        <span class="breadcrumb-current">Cyberaanval</span>
      </nav>

      <div class="scenario-title-row">
        <div class="scenario-icon scenario-icon--purple">
          <Icon name="Shield" size={28} />
        </div>
        <div class="scenario-title-content">
          <h1 class="scenario-title">Voorbereiden op Cyberaanval</h1>
          <div class="scenario-meta">
            <span class="meta-item">8 min</span>
            <span class="meta-divider">·</span>
            <span class="meta-item">Bijgewerkt dec 2025</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Hero Image -->
    <section class="scenario-section">
      <HeroImage
        src="/images/shared/power-outage-candles.webp"
        alt="Voorbereiding op cyberaanval en digitale storing - noodverlichting"
        priority={true}
      />
    </section>

    <!-- TL;DR -->
    <section class="scenario-section">
      <TLDRBlock
        summary="Een cyberaanval of grote digitale storing kan PIN, internet en mobiel platleggen. De oplossing is simpel: contant geld (€70/€30), offline backups, en belangrijke nummers op papier. We zijn te afhankelijk geworden van systemen die kunnen uitvallen."
        keyStat="€70/€30"
        keyStatLabel="Contant per persoon"
        locale="nl"
      />
    </section>

    <!-- Impact Overview -->
    <section class="scenario-section">
      <h2 class="section-title">
        <Icon name="AlertTriangle" size={24} />
        Wat kan uitvallen?
      </h2>
      <div class="impacts-list">
        {cyberImpacts.map((item) => (
          <div class={`impact-item impact-item--${item.severity}`}>
            <div class="impact-content">
              <span class="impact-system">{item.system}</span>
              <span class="impact-effect">{item.impact}</span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Cascade Timeline -->
    <section class="scenario-section">
      <h2 class="section-title">Hoe escaleert het?</h2>
      <div class="cascade-timeline">
        {cascadeEffects.map((item) => (
          <div class="cascade-item">
            <div class="cascade-stage">{item.stage}</div>
            <div class="cascade-content">
              <span class="cascade-title">{item.title}</span>
              <span class="cascade-effects">{item.effects}</span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Phase Tabs -->
    <PhaseTabs
      client:idle
      scenarioKey={scenarioKey}
      locale="nl"
    />

    <!-- Phase: Voor -->
    <section id="voor" class="phase-section">
      <div class="phase-header">
        <span class="phase-number">1</span>
        <div class="phase-title-group">
          <h2 class="phase-title">Voor de cyberaanval</h2>
          <p class="phase-subtitle">Digitale weerbaarheid opbouwen</p>
        </div>
      </div>

      <div class="phase-steps">
        {phases.voor.map((step, index) => (
          <CollapsibleSection
            title={step.title}
            summary={step.detail}
            step={index + 1}
            variant="card"
          >
            <p>{step.detail}</p>
            {step.tip && (
              <div class="step-tip">
                <Icon name="Lightbulb" size={16} />
                <span>{step.tip}</span>
              </div>
            )}
          </CollapsibleSection>
        ))}
      </div>
    </section>

    <!-- Phase: Tijdens -->
    <section id="tijdens" class="phase-section">
      <div class="phase-header">
        <span class="phase-number phase-number--warning">2</span>
        <div class="phase-title-group">
          <h2 class="phase-title">Tijdens de storing</h2>
          <p class="phase-subtitle">Omgaan met digitale uitval</p>
        </div>
      </div>

      <!-- Security Warning -->
      <div class="warning-box">
        <div class="warning-icon">
          <Icon name="ShieldAlert" size={24} />
        </div>
        <div class="warning-content">
          <strong>Let op: phishing neemt toe</strong>
          <p>Criminelen maken misbruik van verwarring. Open geen verdachte links, ook niet van "je bank".</p>
        </div>
      </div>

      <div class="phase-steps">
        {phases.tijdens.map((step, index) => (
          <CollapsibleSection
            title={step.title}
            summary={step.detail}
            step={index + 1}
            variant="card"
          >
            <p>{step.detail}</p>
            {step.tip && (
              <div class="step-tip">
                <Icon name="Lightbulb" size={16} />
                <span>{step.tip}</span>
              </div>
            )}
          </CollapsibleSection>
        ))}
      </div>
    </section>

    <!-- Phase: Na -->
    <section id="na" class="phase-section">
      <div class="phase-header">
        <span class="phase-number phase-number--success">3</span>
        <div class="phase-title-group">
          <h2 class="phase-title">Na de storing</h2>
          <p class="phase-subtitle">Herstel en controle</p>
        </div>
      </div>

      <div class="phase-steps">
        {phases.na.map((step, index) => (
          <CollapsibleSection
            title={step.title}
            summary={step.detail}
            step={index + 1}
            variant="card"
          >
            <p>{step.detail}</p>
            {step.tip && (
              <div class="step-tip">
                <Icon name="Lightbulb" size={16} />
                <span>{step.tip}</span>
              </div>
            )}
          </CollapsibleSection>
        ))}
      </div>
    </section>

    <!-- Interactive Checklist -->
    <section class="scenario-section">
      <h2 class="section-title">
        <Icon name="CheckSquare" size={24} />
        Je cyberweerbaarheid checklist
      </h2>
      <p class="section-intro">
        Vink af wat je al hebt geregeld. Je voortgang wordt automatisch opgeslagen.
      </p>
      <InteractiveChecklist
        client:idle
        storageKey={`${scenarioKey}_nl`}
        categories={checklistCategories}
        title="Voorbereid op digitale uitval"
      />
    </section>

    <!-- FAQs -->
    <section class="scenario-section">
      <h2 class="section-title">Veelgestelde vragen</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details class="faq-item">
            <summary class="faq-question">
              <span>{faq.question}</span>
              <Icon name="ChevronDown" size={20} />
            </summary>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </details>
        ))}
      </div>
    </section>

    <!-- Sources -->
    <section class="scenario-section">
      <details class="sources-block">
        <summary class="sources-header">
          <Icon name="BookOpen" size={18} />
          <span>Bronnen en referenties</span>
          <Icon name="ChevronDown" size={16} />
        </summary>
        <div class="sources-content">
          <ul>
            <li><a href="https://www.nctv.nl/" target="_blank" rel="noopener">NCTV - Nationaal Coordinator Terrorismebestrijding en Veiligheid</a></li>
            <li><a href="https://www.rijksoverheid.nl/onderwerpen/cybercrime" target="_blank" rel="noopener">Rijksoverheid - Cybercrime</a></li>
            <li><a href="https://www.ncsc.nl/" target="_blank" rel="noopener">NCSC - Nationaal Cyber Security Centrum</a></li>
            <li><a href="https://www.betaalvereniging.nl/" target="_blank" rel="noopener">Betaalvereniging Nederland</a></li>
          </ul>
        </div>
      </details>
    </section>

    <!-- Related Scenarios -->
    <section class="scenario-section">
      <h2 class="section-title">Gerelateerde scenario's</h2>
      <div class="related-grid">
        <a href="/nl/scenario/stroomstoring/" class="related-card related-card--amber">
          <Icon name="Zap" size={24} />
          <span>Stroomstoring</span>
        </a>
        <a href="/nl/scenario/evacuatie/" class="related-card related-card--emerald">
          <Icon name="Car" size={24} />
          <span>Evacuatie</span>
        </a>
      </div>
    </section>
  </main>

  <!-- Sticky Action Bar -->
  <StickyActionBar
    client:idle
    actionText="Noodpakket samenstellen"
    actionUrl="/nl/tools/noodpakket-samenstellen/"
    dismissKey={`scenario_${scenarioKey}_nl`}
    label="Volgende stap:"
    locale="nl"
  />
</BaseLayout>

