---
/**
 * CollapsibleSection Component
 *
 * A progressive disclosure component for reducing content density.
 * Shows title/summary always, full content on expand.
 *
 * Features:
 * - Expand/collapse animation
 * - Optional step number
 * - Optional icon
 * - Works without JavaScript (expanded by default in CSS)
 */

interface Props {
  /** Section title (always visible) */
  title: string;
  /** Optional summary shown below title */
  summary?: string;
  /** Optional step number */
  step?: number;
  /** Optional icon name */
  icon?: string;
  /** Whether to start expanded */
  defaultOpen?: boolean;
  /** Visual variant */
  variant?: 'default' | 'card' | 'minimal';
}

import Icon from '../ui/Icon.astro';

const {
  title,
  summary,
  step,
  icon,
  defaultOpen = false,
  variant = 'default',
} = Astro.props;

const variantClasses = {
  default: 'collapsible--default',
  card: 'collapsible--card',
  minimal: 'collapsible--minimal',
};
---

<details class:list={['collapsible', variantClasses[variant]]} open={defaultOpen}>
  <summary class="collapsible__header">
    <div class="collapsible__header-content">
      {step && (
        <span class="collapsible__step">{step}</span>
      )}
      {icon && (
        <span class="collapsible__icon">
          <Icon name={icon as any} size={20} />
        </span>
      )}
      <div class="collapsible__title-group">
        <span class="collapsible__title">{title}</span>
        {summary && (
          <span class="collapsible__summary">{summary}</span>
        )}
      </div>
    </div>
    <span class="collapsible__chevron">
      <Icon name="ChevronDown" size={20} />
    </span>
  </summary>
  <div class="collapsible__content">
    <slot />
  </div>
</details>

<style>
  .collapsible {
    border-radius: 12px;
    overflow: hidden;
  }

  /* Default variant */
  .collapsible--default {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
  }

  /* Card variant - more prominent */
  .collapsible--card {
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  /* Minimal variant - just dividers */
  .collapsible--minimal {
    background: transparent;
    border: none;
    border-bottom: 1px solid var(--color-border);
    border-radius: 0;
  }

  .collapsible__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px;
    cursor: pointer;
    list-style: none;
    user-select: none;
    transition: background 0.15s ease;
  }

  .collapsible__header::-webkit-details-marker {
    display: none;
  }

  .collapsible--default .collapsible__header:hover,
  .collapsible--card .collapsible__header:hover {
    background: var(--color-bg-tertiary);
  }

  .collapsible__header-content {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    flex: 1;
    min-width: 0;
  }

  .collapsible__step {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-accent-subtle);
    color: var(--color-accent-primary);
    font-size: 13px;
    font-weight: 700;
    border-radius: 50%;
  }

  .collapsible__icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-tertiary);
    color: var(--color-text-muted);
    border-radius: 8px;
  }

  .collapsible__title-group {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .collapsible__title {
    font-weight: 600;
    font-size: 15px;
    color: var(--color-text-primary);
    line-height: 1.3;
  }

  .collapsible__summary {
    font-size: 13px;
    color: var(--color-text-muted);
    line-height: 1.4;
  }

  .collapsible__chevron {
    flex-shrink: 0;
    color: var(--color-text-muted);
    transition: transform 0.2s ease;
  }

  .collapsible[open] .collapsible__chevron {
    transform: rotate(180deg);
  }

  .collapsible__content {
    padding: 0 16px 16px;
    color: var(--color-text-secondary);
    font-size: 14px;
    line-height: 1.6;
  }

  /* Animate content */
  .collapsible__content {
    animation: slideDown 0.2s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* When step is present, indent content */
  .collapsible:has(.collapsible__step) .collapsible__content {
    padding-left: 56px; /* 16px + 28px step + 12px gap */
  }

  /* When icon is present, indent content */
  .collapsible:has(.collapsible__icon) .collapsible__content {
    padding-left: 60px; /* 16px + 32px icon + 12px gap */
  }

  /* Active state for touch feedback */
  .collapsible__header:active {
    transform: scale(0.99);
  }

  /* Minimal variant adjustments */
  .collapsible--minimal .collapsible__header {
    padding: 12px 0;
  }

  .collapsible--minimal .collapsible__content {
    padding: 0 0 12px;
  }

  .collapsible--minimal:has(.collapsible__step) .collapsible__content,
  .collapsible--minimal:has(.collapsible__icon) .collapsible__content {
    padding-left: 40px;
  }
</style>
